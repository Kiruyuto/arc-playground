{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "pull-request-title-pattern": "chore(${component}): ${version}",
  "group-pull-request-title-pattern": "chore(ci): Release v`${version}`",
  "separate-pull-requests": false,
  "prerelease": false,
  "draft-pull-request": false,
  "pull-request-header": "ðŸ‘‡ Changelog ðŸ‘‡",
  "include-v-in-tag": false,
  "packages": {
    ".": {
      "component": "image",
      "changelog-path": "CHANGELOG.md",
      "release-type": "simple"
    }
  },
  "plugins": [
    "sentence-case"
  ],
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Fixes",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Chores",
      "hidden": false
    },
    {
      "type": "style",
      "section": "Style",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Refactors",
      "hidden": false
    }
  ]
}